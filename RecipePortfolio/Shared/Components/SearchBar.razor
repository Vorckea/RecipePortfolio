<input type="text"
    class="form-control search-bar"
    @bind="SearchTerm"
    placeholder="@Placeholder"
    @oninput="OnInput"/>

@code {
    [Parameter]
    public string SearchTerm { get; set; }

    [Parameter]
    public EventCallback<ChangeEventArgs> OnInput { get; set; }

    [Parameter]
    public string Placeholder { get; set; } = "Search...";

}
